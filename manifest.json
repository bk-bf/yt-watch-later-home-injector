{
    "manifest_version": 3,
    "name": "YT Watch Later in Home Feed",
    "version": "1.0.0",
    "description": "Surface your YouTube Watch Later playlist as a native-looking horizontal shelf at the top of the YouTube homepage.",
    "permissions": [
        "identity",
        "storage"
    ],
    "host_permissions": [
        "https://www.googleapis.com/*"
    ],
    "oauth2": {
        "client_id": "YOUR_CLIENT_ID_HERE.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/youtube.readonly"
        ]
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "injector.js"
            ],
            "css": [
                "injector.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_icon": "placeholder.png",
        "default_title": "YT Watch Later in Home Feed"
    },
    "icons": {
        "128": "placeholder.png"
    },
    "options_page": "options.html"
}